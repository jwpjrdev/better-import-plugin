<idea-plugin>
    <id>com.github.jwpjrdev.betterimportplugin</id>
    <name>better-import-plugin</name>
    <vendor>jwpjrdev</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <actions>
        <action id="com.github.jwpjrdev.betterimportplugin.actions.ImportAction"
                class="com.github.jwpjrdev.betterimportplugin.actions.ImportAction" text="Better Import"
                description="Triggered when the import hotkey is ran. If you wish to use shift+meta+O don't forget to remove any other keybinds that use it.">
            <keyboard-shortcut keymap="$default" first-keystroke="shift meta O"/>
        </action>
    </actions>
</idea-plugin>
